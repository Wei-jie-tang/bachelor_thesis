{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "declaration": false
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["src/**/dep_*", "src/**/*.dep.*"]
}
